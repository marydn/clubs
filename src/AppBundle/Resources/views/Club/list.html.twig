{% extends '::base.html.twig' %}

{% block title %}Clubs{% endblock %}

{% block body %}

    <h1>Clubs</h1>

    <table class="table table-responsive" id="clubs">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Tel√©fono</th>
            <th>Jugadores</th>
            <th>Eliminar</th>
        </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td><a href="{{ path('update', {id: club.id}) }}">{{ club.id }}</a></td>
                <td><a href="{{ path('update', {id: club.id}) }}">{{ club.name }}</a></td>
                <td>{{ club.phone }}</td>
                <td>{{ club.players.count }}</td>
                <td><a href="{{ path('remove', {id: club.id}) }}"><i class="glyphicon glyphicon-remove"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.4.2/js/dataTables.buttons.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.4.2/js/buttons.flash.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
    <script src="//cdn.datatables.net/buttons/1.4.2/js/buttons.html5.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.4.2/js/buttons.print.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#clubs').DataTable({
                pageLength: 5,
                dom: 'Bfrtip',
                buttons: [
                    'excel', 'pdf'
                ]
            });
        } );
    </script>
{% endblock %}